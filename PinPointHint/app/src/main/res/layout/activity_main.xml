<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cruz.layout.MainActivity"
    android:background="@drawable/icon_pinpoint4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="4"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="PinPointHint"
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:textSize="50dp"
                android:textAlignment="center"
                android:layout_weight="0.24" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="128dp"
                android:weightSum="1">

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Novo no PinPointHint?"
                android:id="@+id/textView2"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registar"
                android:id="@+id/bRegistar"
                android:background="#19307c"
                android:ellipsize="start"
                android:shape="ring"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:layout_weight="0.16"
                android:onClick="showRegistar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JÃ¡ tem uma conta?"
                android:id="@+id/textView3"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/bLogin"
                android:background="#ffffff"
                android:ellipsize="start"
                android:shape="ring"
                android:textColor="#000000"
                android:layout_weight="0.19"
                android:onClick="showLogin" />
                <!--android:onClick="showMap" />-->


            <TextView
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:text="Made at ISCTE"
                android:id="@+id/textView4"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="top|right"
                android:layout_marginTop="80dp"
                android:textColor="#ffffff"
                android:textAlignment="viewStart"
                android:paddingTop="0dp"
                android:paddingEnd="10dp"
                android:paddingRight="0dp"
                android:height="20dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
